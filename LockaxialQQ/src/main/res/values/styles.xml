<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
    <style name="Text_TitleBar_Style">
        <item name="android:paddingTop">10dip</item>
        <item name="android:textSize">20dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

    <style name="Apptheme" parent="Theme.AppCompat.DayNight.NoActionBar"/><!--android:Theme.Holo.Light.NoActionBar.Fullscreen-->

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">loading…</item>
        <item name="DialogSpotCount">5</item>
        <item name="android:background">#aaffffff</item> <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@drawable/mydialog</item>
        <item name="android:width">400dp</item>
        <item name="android:height">140dp</item>
    </style>

    <style
        name="selectorDialog"
        parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@drawable/dissmissdialog</item><!--背景透明-->
    </style>

</resources>
