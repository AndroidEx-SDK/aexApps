<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/window_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/binder_name"
            style="@style/Text_TitleBar_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxWidth="300dip"
            android:paddingLeft="20dip"
            android:singleLine="true"
            android:textColor="@color/Text_BLACK" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal" >

            <!--
                             <ImageView
			                android:id="@+id/open_video"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_alignParentRight="true"
			                android:layout_centerVertical="true"
			                android:paddingRight="10dip"
			                android:src="@android:drawable/ic_menu_camera" />
            -->

            <Button
                android:id="@+id/open_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_menu_camera"
                android:text="视频通话" />

            <Button
                android:id="@+id/video_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="视频留言" />
        </LinearLayout>
        
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/window_seperator" />
        
        <ListView 
            android:id="@+id/msghistory_lv" 
            android:scrollbars="vertical" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:divider="@null"
            android:listSelector="#00000000"
            android:transcriptMode="alwaysScroll"  
            android:layout_weight="1.0" />
        
        <LinearLayout 
            android:orientation="horizontal" 
            android:paddingRight="7.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content">
            <EditText
                android:layout_gravity="center_vertical" 
                android:id="@+id/msg_editor"
                android:nextFocusRight="@+id/msgsend_button" 
                android:layout_width="0.0dip" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="7.0dip" 
                android:layout_marginTop="5.0dip" 
                android:layout_marginRight="7.0dip" 
                android:layout_marginBottom="5.0dip" 
                android:minHeight="34.0dip"
                android:hint="输入消息"
                android:maxLines="8" 
                android:maxLength="2000" 
                android:capitalize="sentences" 
                android:autoText="true" 
                android:layout_weight="1.0" 
                android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textShortMessage" 
                android:imeOptions="actionSend|flagNoEnterAction|flagNoExtractUi" />
            
            <Button
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/msgsend_button" 
                android:paddingLeft="11.0dip" 
                android:paddingRight="11.0dip" 
                android:nextFocusLeft="@id/msg_editor" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:text="send" />
            
         </LinearLayout>
        
    </LinearLayout>

</LinearLayout>

