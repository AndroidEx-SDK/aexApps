<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#10000000"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/postContentEditorWrapper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>

    <TextView
        android:id="@+id/textview_device_guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="24dp"
    />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="691dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dip">

            <RelativeLayout
                android:id="@+id/section1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/content_bg"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/l_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/content_bg_header"
                    android:text="@string/meteredset_dev"
                    android:textSize="30dp"/>


                <TextView
                    android:id="@+id/textView2_2"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dev_card"
                    android:layout_alignLeft="@+id/textView2_1"
                    android:text="@string/meteredset_dev_cardreader"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/card"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/print"
                    android:layout_below="@+id/l_status"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/textView2_1"
                    android:background="@drawable/wp_spinner_bg"/>

                <Spinner
                    android:id="@+id/dev_card"
                    android:layout_width="250dip"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/dev_print"
                    android:layout_below="@+id/l_status"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/card"
                    android:background="@drawable/wp_spinner_bg"/>


                <TextView
                    android:id="@+id/textView2_1"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/dev_print"
                    android:layout_alignBottom="@+id/dev_print"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/meteredset_dev_print"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/print"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/keyboard"
                    android:layout_below="@+id/dev_card"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/textView2_2"
                    android:background="@drawable/wp_spinner_bg"/>

                <Spinner
                    android:id="@+id/dev_print"
                    android:layout_width="250dip"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/dev_keyboard"
                    android:layout_below="@+id/dev_card"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/print"
                    android:background="@drawable/wp_spinner_bg"/>

                <TextView
                    android:id="@+id/textView2_3"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/dev_keyboard"
                    android:layout_alignBottom="@+id/dev_keyboard"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/meteredset_dev_keyboard"/>

                <Spinner
                    android:id="@+id/dev_keyboard"
                    android:layout_width="250dip"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dev_print"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/keyboard"
                    android:background="@drawable/wp_spinner_bg"/>

                <Spinner
                    android:id="@+id/keyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/dev_print"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/textView2_3"
                    android:background="@drawable/wp_spinner_bg"/>


                <TextView
                    android:id="@+id/textView2_4"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/dev_idcard"
                    android:layout_alignBottom="@+id/dev_idcard"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/meteredset_dev_idcard"
                    android:textSize="20dp"/>


                <Spinner
                    android:id="@+id/idcard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/keyboard"
                    android:layout_below="@+id/dev_keyboard"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/textView2_3"
                    android:background="@drawable/wp_spinner_bg"/>


                <Spinner
                    android:id="@+id/dev_idcard"
                    android:layout_width="250dip"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/dev_keyboard"
                    android:layout_below="@+id/dev_keyboard"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@+id/idcard"
                    android:background="@drawable/wp_spinner_bg"/>


            </RelativeLayout>

            <!--             <RelativeLayout
                            android:id="@+id/section2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dip"
