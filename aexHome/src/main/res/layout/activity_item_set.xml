            <RelativeLayout
                android:id="@+id/section3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/content_bg"
                android:paddingBottom="10dp">


                <TextView
                    android:id="@+id/titile_system_set"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/content_bg_header"
                    android:text="@string/system_set"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/textView_font"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/font"
                    android:layout_alignLeft="@+id/textView_statusbar"
                    android:layout_below="@+id/titile_system_set"
                    android:text="@string/font"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/font"
                    android:layout_width="250dip"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/titile_system_set"
                    android:layout_toRightOf="@+id/textView_font"
                    android:background="@drawable/wp_spinner_bg"/>

                <TextView
                    android:id="@+id/textView_statusbar"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/statusbar"
                    android:layout_alignLeft="@+id/textView_screenconfig"
                    android:layout_below="@+id/textView_font"
                    android:text="@string/statusbar"
                    android:textSize="20dp"/>


                <Spinner
                    android:id="@+id/statusbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/font"
                    android:layout_below="@+id/textView_font"
                    android:layout_toRightOf="@+id/textView_statusbar"
                    android:background="@drawable/wp_spinner_bg"/>

                <TextView
                    android:id="@+id/textView_screenconfig"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/screenconfig"
                    android:layout_alignParentLeft="true"
                    android:text="@string/screenconfig"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/screenconfig"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/statusbar"
                    android:layout_below="@+id/textView_statusbar"
                    android:layout_toRightOf="@+id/textView_screenconfig"
                    android:background="@drawable/wp_spinner_bg"/>


                <TextView
                    android:id="@+id/textView_autoboot"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/boot_hour"
                    android:layout_alignParentLeft="true"
                    android:text="@string/autoboot"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/boot_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/screenconfig"
                    android:layout_below="@+id/textView_screenconfig"
                    android:layout_toRightOf="@+id/textView_autoboot"
                    android:background="@drawable/wp_spinner_bg"/>

                <Spinner
                    android:id="@+id/boot_minute"
                    android:layout_width="250dip"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView_screenconfig"
                    android:layout_toRightOf="@+id/boot_hour"
                    android:background="@drawable/wp_spinner_bg"/>


                <TextView
                    android:id="@+id/textView_shutdown"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/shutdown_hour"
                    android:layout_alignParentLeft="true"
                    android:text="@string/autoshutdown"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/shutdown_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignRight="@+id/boot_hour"
                    android:layout_below="@+id/textView_autoboot"
                    android:layout_toRightOf="@+id/textView_shutdown"
                    android:background="@drawable/wp_spinner_bg"/>

                <Spinner
                    android:id="@+id/shutdown_minute"
                    android:layout_width="250dip"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/textView_autoboot"
                    android:layout_toRightOf="@+id/shutdown_hour"
                    android:background="@drawable/wp_spinner_bg"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/section4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/content_bg"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/titile_boot_set"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/content_bg_header"
                    android:text="@string/bootset"
                    android:textSize="30dp"/>


                <TextView
                    android:id="@+id/textView_defaultstart"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/titile_boot_set"
                    android:layout_below="@+id/titile_boot_set"
                    android:text="@string/defaultstart"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/defaultstart"
                    android:layout_width="250dip"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/titile_boot_set"
                    android:layout_toRightOf="@+id/textView_defaultstart"
                    android:background="@drawable/wp_spinner_bg"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/section5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/content_bg"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/titile_gps_set"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/content_bg_header"
                    android:text="@string/titile_gps_set"
                    android:textSize="30dp"/>


                <TextView
                    android:id="@+id/textView_rs232set"
                    android:layout_width="150dip"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/titile_gps_set"
                    android:layout_below="@+id/titile_gps_set"
                    android:text="@string/gps_rs232_set"
                    android:textSize="20dp"/>

                <Spinner
                    android:id="@+id/spinner_gpsset"
                    android:layout_width="250dip"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/titile_gps_set"
                    android:layout_toRightOf="@+id/textView_rs232set"
                    android:background="@drawable/wp_spinner_bg"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/section6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:paddingBottom="10dp">

                <Button
                    android:id="@+id/metered_save"
                    android:layout_width="110dip"
                    android:layout_height="50dip"
                    android:layout_centerInParent="true"
                    android:background="@android:drawable/btn_default"
                    android:text="@string/meteredset_save"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/metered_reload"
                    android:layout_width="110dip"
                    android:layout_height="50dip"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/metered_save"
                    android:background="@android:drawable/btn_default"
                    android:text="@string/meteredset_reload"
                    android:textSize="20dp"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>