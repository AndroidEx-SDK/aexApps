<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:background="@drawable/bg_blue_radius_5"
              android:orientation="vertical"
              android:paddingBottom="@dimen/marginPadding15"
              android:paddingLeft="@dimen/marginPadding30"
              android:paddingRight="@dimen/marginPadding30"
              android:paddingTop="@dimen/marginPadding15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="请设置密码"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size30"/>

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/marginPadding10"
            android:text="跳过"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size18"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/marginPadding60"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/marginPadding30"
            android:background="@drawable/bg_white_radius_5"
            android:hint="请输入密码"
            android:paddingLeft="@dimen/marginPadding16"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_password"
            android:layout_marginLeft="@dimen/marginPadding30"
            android:layout_marginRight="@dimen/marginPadding16"
            android:layout_marginTop="@dimen/marginPadding40"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:background="@drawable/bg_dark_gray_radius_5"
                android:text="取消"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="13dp"
                android:background="@drawable/bg_dark_gray_radius_5"
                android:text="确认"
                android:textColor="@color/white"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>