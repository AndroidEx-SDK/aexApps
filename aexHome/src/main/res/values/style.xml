<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="general"></style>

    <style name="notitle" parent="general">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- fonts -->
    <style name="LinkText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#06C</item>
    </style>

    <style name="LinkText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LinkText.Bold.Big">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LinkText.Bold.Huge">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="user_name" parent="LinkText.Bold.Big">
    </style>

    <style name="user_screen_name" parent="LinkText.Bold.Big">
    </style>

    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="normalText.Big">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="normalText.span">
        <item name="android:textColor">#888</item>
    </style>


    <!-- status bar -->
    <style name="statusbar">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/status_text</item>
        <item name="android:background">@color/status_background</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">@dimen/padding10</item>
        <item name="android:paddingRight">@dimen/padding10</item>
        <item name="android:paddingTop">@dimen/marginPadding5</item>
        <item name="android:paddingBottom">@dimen/marginPadding5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size12</item>
    </style>

    <style name="aexhome_tab_image">
        <item name="android:layout_width">@dimen/marginPadding36</item>
        <item name="android:layout_height">@dimen/marginPadding36</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="aexhome_tab_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/marginPadding6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size12</item>
    </style>


</resources>
